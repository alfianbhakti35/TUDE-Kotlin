<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".user.InputTransaksiActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgInputTransaksiUser"
            android:src="@drawable/tude_icon"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>

        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nama Destinasi"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="150dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text=":"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvNamaDestinasiInputTransaksi"
                android:text="Sembalun"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Nama Guide"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="150dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text=":"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvNamaGuideInputTransaksi"
                android:text="Ahmad"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Harga"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="150dp"
                android:layout_height="match_parent"/>
            <TextView
                android:text=":"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="30dp"
                android:textAlignment="center"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tvNamaHargaInputTransaksi"
                android:text="Sembalun"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/editTextDateTransaksiUser"
                android:hint="Tanggal Booking"
                android:layout_gravity="center"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="text" />

            <Button
                android:id="@+id/btnPicTgl"
                android:text="PICK"
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnBookNow"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:text="Book now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>