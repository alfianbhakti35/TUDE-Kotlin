<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:orientation="horizontal"
    android:layout_marginTop="2dp"
    android:background="#E0F2F1"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/backgroun_radius_putih"
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserKomentarRow11"
            android:src="@drawable/tude_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvNamaUserKomentarRow"
                android:text="Nama Users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RatingBar
                android:id="@+id/retingKomentarRow"
                android:layout_marginTop="2dp"
                android:numStars="5"
                android:max="5"
                android:progressTint="@color/oranye"
                android:progressBackgroundTint="@color/oranye"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvKomntarUserKomentarRow"
                android:layout_marginTop="8dp"
                android:text="@string/tes_komentar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>